<div class="container-fluid mt-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Artist</th>
                <th scope="col">Danceability</th>
                <th scope="col">Energy</th>
                <th scope="col">Key</th>
                <th scope="col">Mode</th>
                <th scope="col">Tempo</th>
            </tr>
        </thead>
        <tbody>
            {{#each songs }}
            <tr>
                <td>{{this.track.name}}</td>
                <td>{{join this.artists}}</td>
                <td>{{this.danceability}}</td>
                <td>{{this.energy}}</td>
                <td>{{this.key}}</td>
                <td>{{this.mode}}</td>
                <td>{{this.tempo}} BPM</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<style>
    #next-btn {
        position: fixed;
        top: 0.5rem;
        right: 0.5rem;
        opacity: 0.25;

        transition: 0.2s all;
    }

    #next-btn:hover {
        opacity: 1;
    }
</style>

<a href="/flow/create" id="next-btn" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Create playlist</a>