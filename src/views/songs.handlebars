<div class="container-fluid mt-3 text-right">
    <a href="/flow/tracks/organized" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Mix it up</a>
</div>
<div class="container-fluid">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Artist</th>
                <th scope="col">Danceability</th>
                <th scope="col">Energy</th>
                <th scope="col">Key</th>
                <th scope="col">Mode</th>
                <th scope="col">Tempo</th>
            </tr>
        </thead>
        <tbody>
            {{#each songs }}
            <tr>
                <td>{{this.track.name}}</td>
                <td>{{join this.artists}}</td>
                <td>{{this.danceability}}</td>
                <td>{{this.energy}}</td>
                <td>{{this.key}}</td>
                <td>{{this.mode}}</td>
                <td>{{this.tempo}} BPM</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>